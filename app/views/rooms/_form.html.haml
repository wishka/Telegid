= form_with(model: @room, local: true, html: {multipart: true}) do |f|
  - if @room && @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message
  
  .form-group.mb-3
    = f.select :category,["-> выбрать <-", "Купить", "Продать", "Найти"], class: 'form-control'
  .form-group.mb-3
    = f.select :category,["-> выбрать <-", "Канал", "Бот", "Услуга"], class: 'form-control'
  .form-group.mb-3
    = f.select :city,["-> выбрать город <-", "Москва", "Санкт-Петербург", "Сочи", "Краснодар", "Самара", "Тольятти", "Ростов", "Новосибирск", "Новороссийск", "Крым", "Анапа", "Геленджик", "Уфа", "Красноярск", "Хабаровск", "Владивосток", "Владикавказ"]
  .form-group.mb-3
    = f.select :category,["-> выбрать <-", "Администрирование", "Взаимопиар", "Создание и продвижение", "Комментарии", "Контент", "Лайки", "Накрутка"], class: 'form-control'
  .form-group.mb-3
    = f.label 'Название'
    = f.text_field :name, class: 'form-control'
  .form-group.mb-3
    = f.label 'Описание'
    = f.text_field :content, class: 'form-control'
  .form-group.mb-3
    = f.label 'Категория'
    = f.select :category,["-> выбрать категорию <-", "Авто/мото", "Авторский блог", "Аниме/Манга/Манха/Манхуа", "Афиша", "Бизнес", "Блогеры", "Видеоигры", "В мире животных", "Гороскоп и Таро", "Дети и родители", "Дизайн", "Для мужчин", "Для женщин", "Инвестиции", "Интернет технологии", "Искусство", "История",
      "Каталог каналов", "Кино", "Красота и уход", "Криптовалюта", "Культура и события", "Кулинария", "Литература", "Магазин", "Маркетинг и PR", "Мода и стиль", "Мотивация и саморазвитие", "Музыка", "Наука и  технологии", "Недвижимость", "Новости и СМИ", "Образование", "Подкасты", "Пошлое", "Психология", "Путешествия и туризм", "Работа и вакансии",
      "Развлечения", "Религия и духовность", "Рукоделие", "Сервисы", "Скидки и акции", "Сливы", "Спорт", "Ставки и азартные игры", "Строительство и ремонт", "Трейдинг", "Фильмы и сериалы", "Хоббы", "Цитаты", "Экология", "Юмор", "18+", "SMM", "IT", "Gif Video"],
      class: 'form-control'
  .form-group.mb-3
    = f.label 'Изображение'
    = f.file_field :image, class: 'form-control'
  .form-group.mb-3
    = f.label "Поднять просмотры на 7 дней"
    = f.radio_button :option, "Hot"
  .form-group.mb-3
    = f.label "XXL-размер"
    = f.radio_button :option, "Big-Size"
  .form-group.mb-3
    = f.label "Карусель"
    = f.radio_button :option, "Carousel"
  .form-group.mb-3
    = f.label "Free - без продвижения"
    = f.radio_button :option, "Free"
  .actions
    = f.submit 'Создать', class: 'btn btn-outline-primary btn-block', style: "width: 100%"
