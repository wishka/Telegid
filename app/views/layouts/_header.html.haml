.container-fluid.bg-dark.px-5.d-block
  .row.gx-0
    .col-lg-4.text-center.text-lg-end
      .d-inline-flex.align-items-center{:style => "height: 45px;"}

      / Topbar End
  %nav.navbar.navbar-expand-lg.navbar-dark.py-lg-0.mod
    %a.navbar-brand.p-0{:href => root_path}
      %h1
        %i.fas.fa-user-tie
        TelegaGid
    - if logged_in?
      %button.navbar-toggler.cntr{"data-bs-target" => "#navbarCollapse", "data-bs-toggle" => "collapse", :type => "button"}
        %span.fas.fa-bars
      #navbarCollapse.collapse.navbar-collapse
        .navbar-nav.py-0
          .nav-item.dropdown-menu
          %li.nav-item.dropdown
            %a#navbarDropdown.nav-link.dropdown-toggle.btn.btn-outline-success{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Навигация
            .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
              %a.dropdown-item{:href => posts_path} Сообщения
              %a.dropdown-item{:href => rooms_path} Объявления
              %a.dropdown-item{:href => microposts_path} Посты
              %a.dropdown-item{:href => telechannels_path} Каналы
              .dropdown-divider
              %a.dropdown-item{:href => 'find'} Поиск
          %li
            %a= link_to "Профиль", current_customer, class: "btn btn-outline-secondary"

          %li
            %a= link_to "Настройки", edit_customer_path(current_customer), class: "btn btn-outline-secondary"
          - if current_customer.admin? && !current_customer?(@customer)
            %li
              %a= link_to "Пользователи", customers_path, class: "btn btn-outline-secondary hid"
          %li
            %a.divider
          %li
            %a= link_to "Выйти", logout_path, method: "delete", class: "btn btn-danger"
    - else
      .navright
        = link_to "Войти!", login_path
        | #{link_to "Зарегистрироваться!", signup_path}
