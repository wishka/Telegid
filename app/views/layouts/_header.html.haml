/ Topbar Start
.container-fluid.bg-dark.px-5.d-block
  .row.gx-0
    .col-lg-4.text-center.text-lg-end
      .d-inline-flex.align-items-center{:style => "height: 45px;"}

      / Topbar End
  %nav.navbar.navbar-expand-lg.navbar-dark.py-lg-0.mod
    %a.navbar-brand.p-0{:href => root_path}
      %h1.hname
        %i.fas.fa-user-tie
        Telegagid
      %ul.nav.navbar-nav.navbar-right{:style => "margin-left: 10%;"}
        - if logged_in?
          %li
            %a

              | #{link_to "Объявления",  rooms_path, class: "btn btn-outline-secondary"}
              - if current_customer.admin? && !current_customer?(@customer)
                | #{link_to "Пользователи", customers_path, class: "btn btn-outline-secondary hid"}
                | #{link_to "Сообщения", posts_path, class: "btn btn-outline-secondary"}
              | #{link_to current_customer.name, current_customer, class: "btn btn-outline-secondary"}
              | #{link_to "Выйти", logout_path, method: "delete", class: "btn btn-danger"}
        - else
          %li= link_to "Войти", login_path

      %button.btn.text-primary.ms-3{"data-bs-target" => "#searchModal", "data-bs-toggle" => "modal", :type => "button"}
        %i.fas.fa-search
