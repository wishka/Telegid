= form_for @telechannel, local: true, html: {multipart: true} do |f|
  - if @telechannel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@telechannel.errors.count, "error")} prohibited this telechannel from being saved:"
      %ul
        - @telechannel.errors.full_messages.each do |message|
          %li= message

  .form-group.mb-3
    = f.label 'Название'
    = f.text_field :name, class: 'form-control'
    .form-group.mb-3
      = f.label 'Ссылка'
      = f.text_field :links, class: 'form-control'
  .form-group.mb-3
    = f.label 'Описание'
    = f.text_field :content, class: 'form-control'
  .form-group.mb-3
    = f.label 'Картинка'
    = f.file_field :image, class: 'form-control'
  .actions
    = f.submit 'Сохранить'
