- provide(:title, 'Home')
.container.center
  %h4.ad-head.text-black.text-uppercase.mb-3
    %h2.head-title У нас вы можете найти, разместить, продать или купить канал, чат, бота или даже услугу
    #header-carousel.carousel.slide.carousel-fade{"data-bs-ride" => "carousel"}
      .carousel-inner
        .carousel-item.active
          - if @carousel_rooms_first.present?
            %img
              = image_tag @carousel_rooms_first.image.url(:large), class:"carousel-img" if @carousel_rooms_first.image?
            .carousel-caption.d-flex.flex-column.align-items-center.justify-content-center
            .p-1{:style => "max-width: 200px;"}
              %h5.mb-md-4.animated.zoomIn.content-block
                %b= @carousel_rooms_first.name
                %em= @carousel_rooms_first.content
                = link_to @carousel_rooms_first.link, @carousel_rooms_first.link
          - else
            %img
              = image_pack_tag "carousel-1.jpg", class:"w-100"
              .carousel-caption.d-flex.flex-column.align-items-center.justify-content-center
              .p-1{:style => "max-width: 900px;"}
                %h3.display-4.text-white.mb-md-4.animated.zoomIn
                  = link_to 'Читать', '/rooms/1'
        .carousel-item
          - if @carousel_rooms_second.present?
            %img
              = image_tag @carousel_rooms_second.image.url(:large), class:"carousel-img" if @carousel_rooms_second.image?
            .carousel-caption.d-flex.flex-column.align-items-center.justify-content-center
            .p-1{:style => "max-width: 200px;"}
              %h5.mb-md-4.animated.zoomIn.content-block
                %b= @carousel_rooms_second.name
                %em= @carousel_rooms_second.content
                = link_to @carousel_rooms_second.link, @carousel_rooms_second.link
          - else
            %img
              = image_pack_tag "carousel-1.jpg", class:"w-100"
              .carousel-caption.d-flex.flex-column.align-items-center.justify-content-center
              .p-1{:style => "max-width: 900px;"}
                %h3.display-4.text-white.mb-md-4.animated.zoomIn
                  = link_to 'Читать', '/rooms/1'
        .carousel-item
          - if @carousel_rooms_last.present?
            %img
              = image_tag @carousel_rooms_last.image.url(:large), class:"carousel-img" if @carousel_rooms_last.image?
            .carousel-caption.d-flex.flex-column.align-items-center.justify-content-center
            .p-1{:style => "max-width: 200px;"}
