- provide(:title, "Log in")
%h1 Log in

.row
  .col-md-6.col-md-offset-3
    = simple_form_for(:session, url: login_path) do |f|
      = f.input :email, class: 'form-control'
      = f.input :password, class: 'form-control'
      = link_to "(forgot password)", new_password_reset_path
      = f.label :remember_me, class: "checkbox inline" do
        = f.check_box :remember_me
        %span Remember me on this computer
      = f.button :submit, "Log in", class: "btn btn-primary"

      = link_to "New? Sign up now!", signup_path
