%table
  %thead
    %tr
      %th
      %th Название
      %th Краткое содержание

  %tbody.clearfix
    - @microposts.each do |micropost|
      %tr
        %td= image_tag micropost.image.url(:mid), class: 'img-thumnail thumb' if micropost.image?
        %td= micropost.title
        %td= link_to micropost.content, micropost

= link_to 'Читать все', microposts_path, class: 'btn btn-lg btn-outline-primary', style: 'width: 100%; border: none'
